<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopStore">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2ea"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#dec18e"
            android:gravity="center_horizontal">

            <TextView
                style="@style/Title_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상점" />
        </LinearLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/body"
            android:layout_below="@id/introduction"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/layout_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_01"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/Stat_Text"
                        style="@style/Time_Text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보유 스탯 : 00" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_01"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/Stat_Text2"
                        style="@style/Time_Text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사용 스탯 : 00" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_02"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Obj_1_Text"
                            style="@style/Category_Obj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="찢어진 티셔츠" />

                        <TextView
                            style="@style/Category_Detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Obj_1_Text"
                            android:text="체력 + 1 , 금액 : 10" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/Enter_Btn1"
                        style="@style/Dungeon_enter"
                        android:text="구매" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_03"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Obj_2_Text"
                            style="@style/Category_Obj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="체크무늬 셔츠" />

                        <TextView
                            style="@style/Category_Detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Obj_2_Text"
                            android:text="민첩 + 2 , 금액 : 20" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <Button
                        android:id="@+id/Enter_Btn2"
                        style="@style/Dungeon_enter"
                        android:text="구매" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_04"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Obj_3_Text"
                            style="@style/Category_Obj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="구겨진 갑옷 상" />

                        <TextView
                            style="@style/Category_Detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Obj_3_Text"
                            android:text="체력 + 3 , 금액 :30" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <Button
                        android:id="@+id/Enter_Btn3"
                        style="@style/Dungeon_enter"
                        android:text="구매" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_05"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Obj_4_Text"
                            style="@style/Category_Obj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="백수의 후드티" />

                        <TextView
                            style="@style/Category_Detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Obj_4_Text"
                            android:text="민첩 + 4 , 금액 : 40" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <Button
                        android:id="@+id/Enter_Btn4"
                        style="@style/Dungeon_enter"
                        android:text="구매" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_07"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_06"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Obj_5_Text"
                            style="@style/Category_Obj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="견습 마법사의 망토" />

                        <TextView
                            style="@style/Category_Detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Obj_5_Text"
                            android:text="지력 + 5 , 금액 : 50" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <Button
                        android:id="@+id/Enter_Btn5"
                        style="@style/Dungeon_enter"
                        android:text="구매" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_08"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_07"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Obj_6_Text"
                            style="@style/Category_Obj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="신입 성기사의 갑옷" />

                        <TextView
                            style="@style/Category_Detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Obj_6_Text"
                            android:text="근력 + 3 , 체력 + 7 , 금액 : 200" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <Button
                        android:id="@+id/Enter_Btn6"
                        style="@style/Dungeon_enter"
                        android:text="구매" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/conclusion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/body"
            android:layout_weight="0"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_above="@id/layout_9"
                android:background="#000000" />

            <LinearLayout
                android:id="@+id/layout_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="60dp"
                android:background="#f6f6f4">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/Dungeon_Btn"
                        style="@style/Main_Button"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"


                        android:src="@mipmap/ic_btn_dungeon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Dungeon_Btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-10dp"
                        android:text="던전"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/Store_Btn"
                        style="@style/Main_Button"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"


                        android:src="@mipmap/ic_btn_store_press" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Store_Btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-10dp"
                        android:text="상점"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/Main_btn"
                        style="@style/Main_Button"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"


                        android:src="@mipmap/ic_btn_main" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Main_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-10dp"
                        android:text="메인"
                        android:textStyle="bold" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/Log_Btn"
                        style="@style/Main_Button"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"


                        android:src="@mipmap/ic_btn_log" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Log_Btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-10dp"
                        android:text="기록"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/Setting_Btn"
                        style="@style/Main_Button"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"


                        android:src="@mipmap/ic_btn_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Setting_Btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-10dp"
                        android:text="설정"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/Clear_Btn"
            style="@style/Clear_Button"
            android:layout_gravity="center"
            android:text="구매 성공!!\n초보자의 단검"
            android:visibility="invisible" />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="FULL_BANNER"
            ads:adUnitId="ca-app-pub-9082043936834188/6919972628">
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>