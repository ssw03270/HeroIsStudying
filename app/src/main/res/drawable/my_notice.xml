<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#454545" />
            <gradient android:angle="-90" android:startColor="#d2d2d2" android:endColor="#cccccc"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#5e7974" />
            <solid android:color="#37534f"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="#666666" />
            <gradient android:angle="-90" android:startColor="#ffffff" android:endColor="#f4f4f4" />
        </shape>
    </item>
</selector>