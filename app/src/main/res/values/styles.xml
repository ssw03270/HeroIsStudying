<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#dec18e</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Title_Text">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="Status_Big">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">#363636</item>
    </style>
    <style name="Status_Small">
        <item name="android:textSize">35dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">#454545</item>
    </style>
    <style name="Status_Small_2">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">#646464</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="Main_Button">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_marginTop">-5dp</item>

    </style>


    <style name="Time_Text_1">
        <item name="android:textSize">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">#363636</item>
    </style>
    <style name="Time_Text_2">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">#646464</item>
    </style>
    <style name="Category">
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">#454545</item>
    </style>
    <style name="Category_Obj">
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">#454545</item>
    </style>
    <style name="Category_Detail">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_family</item>
    </style>
    <style name="Dungeon_enter">
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">#2e2e2e</item>
        <item name="android:background">@drawable/my_button</item>
    </style>
    <style name="Clear_Button">
        <item name="android:textSize">30dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">#2e2e2e</item>
        <item name="android:background">@drawable/my_notice</item>
    </style>
    <style name="Log_Text">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">#646464</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>


</resources>
